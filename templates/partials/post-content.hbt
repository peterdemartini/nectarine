<article class="post-container post">
  <header class="post-header">
    <h1 class="post-title">{{this.title}}</h1>

    <p class="post-date">Published <time datetime="{{this.date}}">{{dateFormat this.date}}</time></p>
  </header>

  <div class="post-content clearfix">
    {{#if this.image}}
      <img class="post-featured-image" src="{{this.image}}">
    {{/if}}

    {{{this.contents}}}
  </div>
</article>
